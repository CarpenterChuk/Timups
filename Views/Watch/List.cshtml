@{
    ViewData["Title"] = "Watch List Page";
}

@await Html.PartialAsync("Header")
<!-- shop section -->

<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                @Model.CurrentCategory
            </h2>
        </div>
        <div class="row">
            @foreach (Watch watch in Model.Watches)
            {
                @await Html.PartialAsync("WatchesSummary", watch);
            }
        </div>
        <div class="btn-box">
            <a asp-controller="Watch" asp-action="List">
                View All
            </a>
        </div>
    </div>
</section>

<!-- end shop section -->
