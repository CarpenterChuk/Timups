<!-- shop section -->

<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                @Model.CurrentCategory
            </h2>
        </div>
        <div class="row">
            @foreach (var watch in Model.Watches)
            {
                <div class="col-sm-6 col-xl-3">
                    <div class="box">
                        <a href="">
                            <div class="img-box">
                                <img src="images/w2.png" alt="">
                            </div>
                            <div class="detail-box">
                                <h6>
                                    @watch.Name
                                </h6>
                                <h6>
                                    Price:
                                    <span>
                                        $@watch.Price.ToString("c")
                                    </span>
                                </h6>
                            </div>
                            <div class="new">
                                <span>
                                    New
                                </span>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
        <div class="btn-box">
            <a href="">
                View All
            </a>
        </div>
    </div>
</section>

<!-- end shop section -->
    