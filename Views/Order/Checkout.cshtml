@model Order
@{
    ViewData["Title"] = "Checkout Page";
}

@await Html.PartialAsync("Header")
<section class="layout_padding">
    <h3 class="text-center">You are just one step away from ordering your watches.</h3>
    <div class="container">
        <div class="row">
            <div class="col-md-12 order-md-1">
                <h4 class="mb-3">Billing address</h4>
                <form asp-action="Checkout" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName">First name</label>
                            <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="Ivan" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName">Last name</label>
                            <input asp-for="LastName" type="text" class="form-control" id="firstName" placeholder="Ivanov" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" id="email" placeholder="you@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" id="phoneNumber" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AddressLine1"></label>
                        <input asp-for="AddressLine1" type="text" class="form-control" id="address" placeholder="1234 Main St" />
                        <span asp-validation-for="AddressLine1" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AddressLine2"></label>
                        <input asp-for="AddressLine2" type="text" class="form-control" id="address2" placeholder="Apartment or suite" />
                        <span asp-validation-for="AddressLine2" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-5 mb-3">
                            <label asp-for="Country">Country</label>
                            <input asp-for="Country" type="text" class="form-control" id="country" placeholder="Ukraine" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="State">State</label>
                            <input asp-for="State" type="text" class="form-control" id="state" placeholder="Kyiv" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="ZipCode">Zip</label>
                            <input asp-for="ZipCode" type="text" class="form-control" id="zip" placeholder="04893">
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                    </div>
                    <input class="btn btn-lg btn-block btn-success" type="submit" value="Complete order" />
                    @*<input class="btn btn-default" type="submit" value="Return " />*@

                </form>
            </div>
        </div>
    </div>
</section>